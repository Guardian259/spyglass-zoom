{
  "schemaVersion": 1,
  "id": "spyzoom",
  "version": "${version}",

  "name": "Spyglass Zoom",
  "description": "A mod that lets you adjust the zoom on the spyglass.",
  "authors": ["guardian", "cobrasrock"],
  "contact": {
    "homepage": "https://modrinth.com/mod/spyzoom-updated",
    "sources": "https://github.com/Guardian259/spyglass-zoom",
    "issues": "https://github.com/Guardian259/spyglass-zoom/issues"
  },

  "license": "GNU-LGPL-3",
  "icon": "assets/spyzoom/icon.png",

  "environment": "client",
  "entrypoints": {
    "main": [
      "net.cobrasrock.spyzoom.SpyZoom"
    ]
  },
  "mixins": [
    "spyzoom.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.15.11",
    "minecraft": ">=1.21 <=1.21.1",
    "java": ">=21"
  }
}
